{% extends 'base.html.twig' %}

{% block title %}
    Show a post
{% endblock %}

{% block body %}

    <div class="my-14 flex flex-col">
        <div class="text-center">
            <p class="text-gray-500">
                {{ post.createdAt|date("j M Y") }}
            </p>
            <p class="italic text-sm">by {{ post.user.name }}
                <img class="ml-2 object-scale-down h-14 w-14 rounded-full inline" src="{{ asset('images/' ~ user.image.path ?? 'default-avatar.png')  }}" alt="profile image"></p>

            <h1 class="mb-10 text-6xl font-bold tracking-tighter mt-5">{{ post.title }}</h1>
            <hr>
        </div>

        <p class="text-gray-500 mt-10 leading-8">
            {{ post.content }}
        </p>




        {# like/dislike #}
        <div class="flex mt-10">

        {{ component('LikeComponent', {post: post, isLiked: isLiked, isDisliked: isDisliked}) }}

        </div>

        {# follow user #}
        {% if app.user and app.user.id != post.user.id %}
            <div class="flex mt-10">
                {% if isFollowing %}
                You follow:&nbsp;

                    <a class="text-gray-500 hover:text-gray-700" href="{{ path('posts.user', {id:post.user.id}) }}">
                        {{ post.user.name }}
                    </a>

                    <a href="{{ path('toggleFollow', { user: post.user.id }) }}" class="ml-3 inline font-bold text-sm px-4 py-1 text-white rounded bg-blue-500 hover:bg-blue-600">
                        {% trans %}Unfollow{% endtrans %}
                    </a>
                {% else %}
                    <a class="ml-3 inline font-bold text-sm px-6 py-2 text-white rounded bg-blue-500 hover:bg-blue-600"
                       href="{{ path('toggleFollow', {user:post.user.id}) }}">
                        {% trans %}Follow the post author{% endtrans %}
                    </a>

                {% endif %}
            </div>
        {% endif %}

    </div>

{% endblock %}